<config>
    <modules>
        <Mhauri_LogView>
            <version>1.0.0</version>
        </Mhauri_LogView>
    </modules>
    <global>
        <models>
            <logview>
                <class>Mhauri_LogView_Model</class>
            </logview>
        </models>
        <blocks>
            <logview>
                <class>Mhauri_LogView_Block</class>
            </logview>
        </blocks>
        <helpers>
            <logview>
                <class>Mhauri_LogView_Helper</class>
            </logview>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <mhauri_logview after="Mage_Adminhtml">Mhauri_LogView_Adminhtml</mhauri_logview>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>

    <adminhtml>
        <layout>
            <updates>
                <logview module="logview">
                    <file>logview.xml</file>
                </logview>
            </updates>
        </layout>
    </adminhtml>
</config>